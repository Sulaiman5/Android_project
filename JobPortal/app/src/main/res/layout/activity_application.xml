<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dbsjob"
    tools:context=".ApplicationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:text="First name: "
                    android:layout_height="56dp"/>
                <TextView
                    android:id="@+id/faname"
                    android:textSize="20dp"
                    android:layout_width="250dp"
                    android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:text="Last name: "
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="56dp"/>
                <TextView
                    android:id="@+id/laname"
                    android:textSize="20dp"
                    android:layout_width="250dp"
                    android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:text="NID num: "
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="56dp"/>
                <TextView
                    android:id="@+id/nids"
                    android:textSize="20dp"
                    android:layout_width="250dp"
                    android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:text="Email : "
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="56dp"/>
                <TextView
                    android:id="@+id/emails"
                    android:textSize="18dp"
                    android:layout_width="250dp"
                    android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="Address: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/homelocation"
                    android:textSize="20dp"
                    android:hint="Your Current location"
                    android:layout_width="250dp"
                    android:layout_height="56dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="proposal: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/propojal"
                    android:layout_width="250dp"
                    android:layout_height="56dp"
                    android:hint="Message to the recruiter:"
                    android:inputType="textFilter"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnsubmit"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
</LinearLayout>